{
  "name": "next-js-ecommerce-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev -p 8080",
    "build": "next build",
    "start": "next start -p 8080",
    "format": "biome check --write --linter-enabled=false ./src",
    "lint": "pnpm biome lint --write --unsafe ./src",
    "typecheck": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest  --coverage",
    "test:e2e": "cypress open"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=21.7.1",
    "pnpm": ">=9.12.1"
  },
  "dependencies": {
    "@testing-library/user-event": "^14.6.1",
    "next": "14.2.14",
    "plaiceholder": "^3.0.0",
